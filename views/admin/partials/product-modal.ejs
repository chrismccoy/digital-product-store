<div
  id="product-modal"
  class="fixed inset-0 z-10 hidden overflow-y-auto"
  aria-labelledby="modal-title"
  role="dialog"
  aria-modal="true"
>
  <div
    class="flex min-h-full items-center justify-center p-4 text-center"
  >
    <div
      class="fixed inset-0 bg-black bg-opacity-50 transition-opacity"
      aria-hidden="true"
    ></div>

    <div
      class="relative transform overflow-hidden bg-white text-left shadow-xl transition-all sm:my-8 sm:w-full sm:max-w-lg border-4 border-black"
    >
      <div class="p-8">
        <h3
          class="text-3xl font-bold uppercase bg-black text-yellow-300 px-3 py-1 inline-block mb-4"
          id="modal-title"
        >
          Add New Product
        </h3>

        <div
          id="modal-error-message"
          class="hidden border-2 border-red-600 bg-red-50 p-4 text-left mb-4"
        ></div>

        <form id="product-form" class="space-y-4">
          <div>
            <label
              for="name"
              class="block text-lg font-bold uppercase mb-1"
              >Product Name</label
            >
            <input
              type="text"
              name="name"
              id="name"
              class="w-full p-3 bg-white border-2 border-black text-lg focus:outline-none focus:ring-4 focus:ring-yellow-300"
              required
            />
          </div>
          <div>
            <label
              for="price"
              class="block text-lg font-bold uppercase mb-1"
              >Price</label
            >
            <input
              type="number"
              step="0.01"
              name="price"
              id="price"
              class="w-full p-3 bg-white border-2 border-black text-lg focus:outline-none focus:ring-4 focus:ring-yellow-300"
              required
            />
          </div>
          <div>
            <label
              for="text"
              class="block text-lg font-bold uppercase mb-1"
              >Short Text</label
            >
            <input
              type="text"
              name="text"
              id="text"
              class="w-full p-3 bg-white border-2 border-black text-lg focus:outline-none focus:ring-4 focus:ring-yellow-300"
              required
            />
          </div>
          <div>
            <label
              for="filename"
              class="block text-lg font-bold uppercase mb-1"
              >Product Filename</label
            >
            <input
              type="text"
              name="filename"
              id="filename"
              class="w-full p-3 bg-white border-2 border-black text-lg focus:outline-none focus:ring-4 focus:ring-yellow-300"
              placeholder="e.g., product-v1.zip"
              required
            />
          </div>
          <div>
            <label
              for="image"
              class="block text-lg font-bold uppercase mb-1"
              >Image URL</label
            >
            <input
              type="url"
              name="image"
              id="image"
              class="w-full p-3 bg-white border-2 border-black text-lg focus:outline-none focus:ring-4 focus:ring-yellow-300"
              placeholder="https://placehold.co/800x600"
              required
            />
          </div>
          <div>
            <label
              for="description"
              class="block text-lg font-bold uppercase mb-1"
              >Description</label
            >
            <textarea
              id="description"
              name="description"
              rows="3"
              class="w-full p-3 bg-white border-2 border-black text-lg focus:outline-none focus:ring-4 focus:ring-yellow-300"
            ></textarea>
          </div>
        </form>

        <div class="mt-6 flex flex-col-reverse sm:flex-row sm:justify-end sm:space-x-4">
          <button
            type="button"
            id="cancel-modal-btn"
            class="mt-3 sm:mt-0 w-full sm:w-auto px-6 py-3 bg-white text-black text-lg font-bold border-2 border-black uppercase hover:bg-neutral-100"
          >
            Cancel
          </button>
          <button
            type="button"
            id="save-product-btn"
            class="w-full sm:w-auto px-6 py-3 bg-yellow-300 text-black text-lg font-bold border-2 border-black uppercase transition-all duration-150 hover:-translate-x-1 hover:-translate-y-1 hover:shadow-[4px_4px_0px_#000]"
          >
            Save Product
          </button>
        </div>
      </div>
    </div>
  </div>
</div>
